# Environment Configuration Example
# Copy this file to .env and fill in your actual values


# TRADING CONFIGURATION

# Exchange API Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true

# Trading Parameters
SYMBOL=BTCUSDT
TICK_SIZE=0.01
LOT_SIZE=0.001
DEFAULT_BASE_SIZE=0.001
MAX_POSITION=1.0
RISK_AVERSION_GAMMA=0.1
TIME_HORIZON_SECONDS=30


# RISK MANAGEMENT


MAX_LOSS=1000.0
MAX_DRAWDOWN_PERCENT=10.0
POSITION_SIZE_LIMIT=5.0
LATENCY_THRESHOLD_MS=100.0
ENABLE_RISK_CHECKS=true


# DASHBOARD CONFIGURATION


DASHBOARD_PORT=8501
REFRESH_RATE_MS=1000
AUTO_REFRESH_INTERVAL=2000
ENABLE_DEBUG_MODE=false


# LOGGING CONFIGURATION  


LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_DIRECTORY=logs
MAX_LOG_FILES=30

# BACKTESTING CONFIGURATION


HISTORICAL_DATA_PATH=data/historical
BACKTEST_RESULTS_PATH=results/backtests
DEFAULT_BACKTEST_PERIOD_DAYS=30


# DEVELOPMENT SETTINGS

# Set to true for development/testing
ENABLE_PAPER_TRADING=true
MOCK_MARKET_DATA=false
SAVE_STRATEGY_STATE=true